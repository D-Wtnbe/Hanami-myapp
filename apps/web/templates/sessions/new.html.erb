<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

<%=
  form_for :session, routes.sessions_path, class: 'user-form' do
    div class: 'input' do
      label :ユーザーID
      text_field :userid, class: 'form-control'
    end

    div class: 'password' do
      label :パスワード
      password_field :password, class: 'form-control'
    end

    div class: 'controls' do
      submit "ログイン", class: "btn btn-primary"
    end
  end
%>
<p></p>
<%= link_to "アカウント作成", routes.new_user_path, class: "btn btn-primary btn-sm" %>
</div>
</div>
