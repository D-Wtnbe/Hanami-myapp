<h1>新規作成</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-3">
          <%=
          form_for :user, '/users', class: 'user-form' do
          div class: 'input' do
                label      :ユーザーID
                text_field :userid, class: 'form-control'
                end

          div class: 'input' do
                label      :名前
                text_field :name, class: 'form-control'
                end

          div class: 'input' do
                label      :メールアドレス
                email_field :email, class: 'form-control'
                end

          div class: 'input' do
                label      :パスワード
                password_field :password, class: 'form-control'
                end

              div class: 'controls' do
                submit "送信", class: "btn btn-primary"
              end
            end
            %>
          </div>
          </div>
